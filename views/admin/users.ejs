<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <title>值班人员管理 - 值班啦 - 管理系统</title>
    <link rel='stylesheet' href='../../css/admin/index.css' />
    <link rel='stylesheet' href='../../css/admin/datedropper.min.css' />
    <link rel="stylesheet" href="../../css/admin/my-style.css" />
</head>
<body>
    <% include header.ejs %>
    <div class="bodyBox">
        <form id="userForm" name="userForm" method="post" action="" class="userForm">
            <input type="text" name="userName" id="userName" placeholder="值班人员姓名" class="userName" />
            <input type="text" name="startTime" id="startTime" placeholder="入职时间" class="userName" />
            <input type="text" name="endTime" id="endTime" placeholder="离职时间" class="userName" data-lang="zh" />
            <select name="jobs" id="jobs" class="jobs">
                <option value="0" select>岗位</option>
                <option value="设计">设计</option>
                <option value="制作">制作</option>
            </select>
            <input type="submit" name="userBtn" id="userBtn" value="添加" class="userBtn" />
        </form>
        <table cellpadding="0" cellspacing="0" class="usersList usersHead">
            <tr>
                <th class="w100">ID</th>
                <th class="w200">姓名</th>
                <th class="w200">岗位</th>
                <th>入职时间</th>
                <th>离职时间</th>
            </tr>
        </table>
        <div class="userBox">
            <% if (userData.length) { %>
            <% idx = 0 %>
            <table cellpadding="0" cellspacing="0" class="usersList">
                <% userData.forEach(function(list){ %>
                <% idx++ %>
                <tr data-id="<%= list._id %>" class="operation">
                    <td class="w100"><%= idx %></td>
                    <td class="w200 n"><%= list.userName %></td>
                    <td class="w200 j"><%= list.jobs %></td>
                    <td class="st"><%= list.startTime %></td>
                    <td class="et"><%= list.endTime %></td>
                </tr>
                 <% }) %>
            </table>
            <% } %>
        </div>
    </div>
    <div class="editUserBox">
        <div>
            <p><input type="text" name="userName" id="userName_edit" placeholder="值班人员姓名" class="userName" /></p>
            <p><input type="text" name="startTime" id="startTime_edit" placeholder="入职时间" class="userName" /></p>
            <p><input type="text" name="endTime" id="endTime_edit" placeholder="离职时间" class="userName" /></p>
            <p><select name="jobs" id="jobs_edit" class="jobs">
                <option value="0" select>岗位</option>
                <option value="设计">设计</option>
                <option value="制作">制作</option>
            </select></p>
            <p><button class="edit">修改</button><button class="esc">取消</button></p>
            <input name="userId" type="hidden" id="userId" value="" />
        </div>
    </div>
    <div id="selectMenu" class="selectMenu">
        <h2>修改</h2>
        <p><span>是</span><span>否</span></p>
        <h2>删除</h2>
        <div><span>是</span><span>否</span></div>
    </div>
    <script type="text/javascript" src="../../js/jquery-3.2.1.min.js"></script>
    <script src="../../js/admin/datedropper.min.js"></script>
    <script type="text/javascript" src="../../js/admin/users.js"></script>
</body>
</html>